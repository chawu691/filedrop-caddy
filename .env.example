# Server Configuration
PORT=3001
NODE_ENV=development

# Admin Authentication (CHANGE THESE IN PRODUCTION!)
ADMIN_USER=admin
ADMIN_PASSWORD=password

# File Upload Configuration
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*,application/zip

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (SQLite)
# Database file will be created at backend/database/app.db
DB_PATH=backend/database/app.db

# File Storage Configuration
UPLOAD_DIR=backend/uploads
MAX_STORAGE_SIZE_GB=10
